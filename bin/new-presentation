#! /bin/bash

set -e

PRESENTATION_SLUG=$1
PRESENTATION_TITLE=$2
PRESENTATION_DIR=_presentations/$PRESENTATION_SLUG
PRESENTATION_PAGE=$PRESENTATION_DIR/index.md

mkdir -p $PRESENTATION_DIR
touch $PRESENTATION_PAGE
touch $PRESENTATION_DIR/presentation.md
touch $PRESENTATION_DIR/README.md

echo "---" >> $PRESENTATION_PAGE
echo "title: $PRESENTATION_TITLE" >> $PRESENTATION_PAGE
echo "slug: $PRESENTATION_SLUG" >> $PRESENTATION_PAGE
echo "---" >> $PRESENTATION_PAGE
